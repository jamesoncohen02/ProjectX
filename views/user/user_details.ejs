<%-include('../partials/header', {page_title:user.name + " Details"})-%>
<%-include('../partials/navbar')-%>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h4>User Details for <%=user.name%></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p style="margin-bottom:0px;"><b>Username: </b><%=user.username%></p>
      <p style="margin-bottom:0px;"><b>Email: </b><a href="mailto:<%=user.email%>"><%=user.email%></a></p>
      <%let asteriskPassword = user.password.split("");%>
      <%for (let i = 0; i<asteriskPassword.length; i++){asteriskPassword[i] = "*";}%>
      <%let finalPassword = asteriskPassword.join("");%>
      <p style="margin-bottom:0px;"><b>Password: </b><%=finalPassword%></p> <!--FIX THIS-->
      <%let type = user.type;%>
      <%let newType = type.charAt(0).toUpperCase() + type.slice(1);%>
      <p style="margin-bottom:0px;"><b>Role: </b><%=newType%></p>
      <%if (type == "student"){%>
      <p style="margin-bottom:0px;"><b>Current Room Signup: </b><%=user.currentRoomSignup%></p>
      <%}%>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <br>
      <p><a href="../user/userSelect">Return to Select User Page</a></p>
    </div>
  </div>
</div>

<%-include('../partials/footer')-%>
